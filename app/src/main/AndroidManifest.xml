<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.straightbuy.www.straightbuy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductPageActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".AdminLoginActivity" />
        <activity android:name=".AddSliderImageActivity" />
        <activity android:name=".AddProductActivity" />
        <activity android:name=".AddCategoryActivity" />
        <activity android:name=".AddNotificationActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".AddSubCategoryActivity" />
        <activity android:name=".ProductDetailActivity" />
        <activity android:name=".ProductCategoryActivity" />
        <activity android:name=".MyCartActivity"></activity>
    </application>

</manifest>